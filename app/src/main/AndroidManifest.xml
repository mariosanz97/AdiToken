<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="adisense.adisense">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />

    <application
        android:icon="@drawable/adidas"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".Activity.activity_Login" />
        <activity android:name=".Activity.activity_Profile" />
        <activity android:name=".NFCRead.activity_nfcRead" />
        <activity android:name=".NFCRead.activity_nfcEvento" />
        <activity android:name=".Activity.activity_Ranking" />
        <activity android:name=".Activity.activity_Exchange" />
        <activity android:name=".Activity.activity_EventoEchange" />
        <activity android:name=".Activity.activity_AdidasEvents" />
        <activity android:name=".Localizacion" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/key" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".Activity.activity_Event"></activity>
    </application>

</manifest>